@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

@*<h2 class="pl-5">@ViewData["Title"]</h2>*@
<div class="row">
    <div class="col-md-4 offset-md-4">
        <section>
            <form class="pt-5 pb-5" id="account" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="form-check">
                        <input style="width: 10px; height: 24px" asp-for="Input.RememberMe" class="form-check-input m-0 p-0" type="checkbox" value="" id="remember">
                        <label asp-for="Input.RememberMe" class="form-check-label" for="remember">
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div style="text-align:center" class="form-group">
                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                </div>
                <div style="text-align:center" class="form-group">
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Don't have account yet?</a>
                </div>
                <div style="text-align:center" class="form-group">
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Email Verification</a>
                </div>
                <div style="text-align:center" class="form-group">
                    <button style="width:100%" type="submit" class="btn btn-dark">Log in</button>
                </div>
            </form>
        </section>
    </div>
