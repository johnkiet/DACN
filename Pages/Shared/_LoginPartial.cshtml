@using Microsoft.AspNetCore.Identity

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "Admin" })" method="post" id="logoutForm">
        <div id="top-list-user">
            <a class="btn" asp-controller="App" asp-action="Contact" title="Contact">Contact</a>
            <a class="btn" asp-controller="App" asp-action="About" title="aboutus">About</a>
            @if (User.IsInRole("Admin"))
            {
                <a class="btn" asp-controller="Admin" asp-action="Home">Admin</a>

            }
            <a class="btn" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            <button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button>
        </div>
    </form>
}
else
{
    <li><a asp-controller="App" asp-action="Contact" title="Contact">Contact</a></li>
    <li><a asp-controller="App" asp-action="About" title="aboutus">About</a></li>
    <li><a asp-area="Identity" asp-page="/Account/Register" class="inline-item">Register</a></li>
    <li><a asp-area="Identity" asp-page="/Account/Login" class="inline-item">Login</a></li>
}
