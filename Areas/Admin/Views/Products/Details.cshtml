@model ProjectDotNetV2.Data.Entities.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Product</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">


                            <div class="row">
                                <form asp-action="Create">

                                    <div class="col-md-6">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group">
                                            <label asp-for="Name" title="" class="control-label"> @Html.DisplayNameFor(model => model.Name)</label>
                                            <input asp-for="Name" class="form-control" value=" @Html.DisplayFor(model => model.Name)" disabled="disabled" />
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="ShortDescription" class="control-label">
                                                @Html.DisplayNameFor(model => model.ShortDescription)
                                            </label>
                                            <textarea style="width:100%;" class="form-text" disabled="disabled">@Html.DisplayFor(model => model.ShortDescription) </textarea>
                                            <span asp-validation-for="ShortDescription" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Color" class="control-label">
                                                @Html.DisplayNameFor(model => model.Color)
                                            </label>
                                            <input asp-for="Color" class="form-control" value="            @Html.DisplayFor(model => model.Color)"disabled="disabled" />
                                            <span asp-validation-for="Color" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Price" class="control-label">
                                                @Html.DisplayNameFor(model => model.Price)
                                            </label>
                                            <input asp-for="Price" class="form-control" value="@Html.DisplayFor(model => model.Price)" disabled="disabled" />
                                            <span asp-validation-for="Price" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">


                                        <div class="form-group">
                                            <label asp-for="Quantity" class="control-label">
                                                @Html.DisplayNameFor(model => model.Quantity)
                                            </label>
                                            <input asp-for="Quantity" class="form-control" value="@Html.DisplayFor(model => model.Quantity)" disabled="disabled" />
                                            <span asp-validation-for="Quantity" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Description" class="control-label">
                                                @Html.DisplayNameFor(model => model.Description)
                                            </label>
                                            <textarea style="width:100%;" class="form-text" disabled="disabled">@Html.DisplayFor(model => model.Description)</textarea>
                                            <span asp-validation-for="Description" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="CategoryId" class="control-label">
                                                @Html.DisplayNameFor(model => model.Category)
                                            </label>
                                            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Gender" class="control-label">
                                                @Html.DisplayNameFor(model => model.Gender)
                                            </label>
                                            <input asp-for="Gender" class="form-control" value="            @Html.DisplayFor(model => model.Gender)
" disabled="disabled" />
                                            <span asp-validation-for="Gender" class="text-danger"></span>
                                        </div>
                                    </div>


                                </form>
                                <h5 style="text-align:center;">Image Products</h5>
                                @{var image1 = @Html.DisplayFor(model => model.ProductFirstImage);
                                    var image2 = @Html.DisplayFor(model => model.ProductSecondImage);
                                    var image3 = @Html.DisplayFor(model => model.ProductThirdImage);

                                    if (image1 != null)
                                    {
                                        <img src="~/assets/img/product/@image1" style="width:20%;" />
                                    }
                                    if (image2 != null)
                                    {
                                        <img src="~/assets/img/product/@image2"  style="width:20%;" />

                                    }
                                    if (image3 != null)
                                    {
                                        <img src="~/assets/img/product/@image3"  style="width:20%;" />

                                    }

                                }






                                }

                            </div>
                        </div>



                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </div>



